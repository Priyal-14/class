#include<iostream>
using namespace std;
class time
{
  private:
	int hour;
	int minute;
	int seconds;
  public:
        displaytime();
        displayseconds()
	{
	   int totalsec;
	   totalsec=3600*hour+60*minute+1*seconds;
	   cout<<totalsec<<"\n";
	}
};
 time :: displaytime()
{
   cout<<"hour:\n";
   cin>>hour;
   cout<<"minute:\n";
   cin>>minute;
   cout<<"seconds:\n";
   cin>>seconds;
   cout<<"time format="<<hour<<":"<<minute<<":"<<seconds<<"\n";

}
 
int main()
{
    
    time t1;
    t1.displaytime();
    t1.displayseconds();
    
}

